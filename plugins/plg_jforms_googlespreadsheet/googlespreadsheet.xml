<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="jforms" method="upgrade">
	<name>PLG_JFORMS_GOOGLESPREADSHEET</name>
	<author>Adam Bouqdib</author>
	<creationDate>May 19th, 2013</creationDate>
	<copyright>Copyright (c) 2006 - 2013 Adam Bouqdib. All rights reserved.</copyright>
	<authorEmail>adam@abemedia.co.uk</authorEmail>
	<authorUrl>www.abemedia.co.uk</authorUrl>
	<version>1.2.3</version>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<description>PLG_JFORMS_GOOGLESPREADSHEET_XML_DESCRIPTION</description>
	<files>
		<filename plugin="googlespreadsheet">googlespreadsheet.php</filename>
		<filename>config.xml</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<folder>elements</folder>
		<folder>Zend</folder>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB.plg_jforms_googlespreadsheet.ini</language>
	</languages>
    <config>
		<fields name="params">
			<fieldset name="basic">
				<field name="google_user" type="email" default="you@gmail.com" label="PLG_JFORMS_GOOGLESPREADSHEET_USERNAME_LABEL" description="PLG_JFORMS_GOOGLESPREADSHEET_USERNAME_DESC" required="true" />	
				<field name="google_pass" type="password" default="" label="PLG_JFORMS_GOOGLESPREADSHEET_PASSWORD_LABEL" description="PLG_JFORMS_GOOGLESPREADSHEET_PASSWORD_DESC" required="true" />	
			</fieldset>
		</fields>
    </config>
    <updateservers>
        <server type="extension" priority="1" name="jForms Update">http://update.donjoomla.com/jforms/plg_jforms_googlespreadsheet.xml</server>
    </updateservers>
</extension>
